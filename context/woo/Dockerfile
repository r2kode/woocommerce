FROM julianxhokaxhiu/docker-woocommerce

ARG PROJECT_USER
ARG PROJECT_GROUP
ARG PROJECT_USER_ID
ARG PROJECT_USER_GID

RUN groupadd -g ${PROJECT_USER_GID} ${PROJECT_GROUP}
RUN useradd -u ${PROJECT_USER_ID} ${PROJECT_USER} -g ${PROJECT_GROUP}

# ${WEBSERVER_ROOT_DIR}
RUN chown -R ${PROJECT_USER}:${PROJECT_GROUP} /var/www/html

ENV APACHE_RUN_USER ${PROJECT_USER}
ENV APACHE_RUN_GROUP ${PROJECT_GROUP}